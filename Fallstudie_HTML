    <script>
        // Small client-side enhancements
        document.getElementById('year').textContent = new Date().getFullYear();

        function handleSubmit(e){
            e.preventDefault();
            const form = e.target;
            const name = form.name.value.trim();
            const email = form.email.value.trim();
            if(!name || !email){
                showMessage('Bitte Name und E‑Mail angeben.', true);
                return;
            }
            // Simulate async send
            showMessage('Sende Spende...');

            setTimeout(() => {
                form.reset();
                showMessage('Danke! Deine Spende wurde übermittelt. Wir kontaktieren dich per E‑Mail.', false, 7000);
            }, 900);
        }

        function showMessage(msg, isError = false, timeout = 5000){
            const el = document.getElementById('formMessage');
            el.style.display = 'block';
            el.textContent = msg;
            el.style.color = isError ? '#c23b3b' : 'var(--muted)';
            if(timeout) setTimeout(()=> el.style.display='none', timeout);
        }
    </script>
